<!DOCTYPE html>
<html>
  <head>
    <title>FoodLog</title>
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <%= render "shared/navbar" %>
    <% if notice.present? && user_signed_in? %>
      <p class="notification is-link is-light"><%= notice %></div>
      <p>Hello <%= current_user.email %></p>
    <% end %>

    <% if alert.present? %>
      <div class="notification is-danger is-light"><%= alert %></div>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
    
  </body>
</html>
